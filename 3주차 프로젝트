}
// 이스터에그
 

int main()
{
    int choice;
    
	printf("\t\t\t\t\t-------------지뢰 찾기------------\n");
	printf("\t\t\t\t\t                                  \n");
	printf("\t\t\t\t\t                                  \n");
	printf("\t\t\t\t\t-----------0. 순위 보기-----------\n"); 
	printf("\t\t\t\t\t-----------1. 게임 시작-----------\n");
	printf("\t\t\t\t\t-----------2. 게임 설명-----------\n");
	printf("\t\t\t\t\t-----------3. 게임 종료-----------\n\n\t\t\t\t\t");
	
	scanf("%d",&choice);
	system("cls");
	
    switch(choice)
    {
    case 1:
    	game();
        break;
        
    case 2:
	    instruction();
	    int menu; 
	    
	    scanf("%d", &menu);
	    
    	if (menu == 0)
    	{
		system("cls");
    	main();
        }
        
    case 3:
	    break; 
  
    return 0;
	}
}
