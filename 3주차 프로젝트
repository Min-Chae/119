	printf("\t\t\t\t\t           ■■            ■■            ■■        \n");
	printf("\t\t\t\t\t           ■■            ■■            ■■        \n");
	printf("\t\t\t\t\t           ■■            ■■            ■■        \n");
	printf("\t\t\t\t\t           ■■            ■■            ■■        \n");
